<!doctype html>
<html lang="ko">

<head>
    <meta charset="UTF-8">
    <title>Document</title>
    <link rel = "stylesheet" href = "css/iframe.css">
</head>

<body>
    <div class ="input-tabel">
        <table>
            <tr>
                <td class = "input-head">기업 유지비</td>
                <td><label class = "input_action"><input type="text" name = "upkeep" id = "upkeep"><br></label></td>
            </tr>
            <tr>
                <td class = "input-head">마케팅비</td>
                <td><label class = "input_action"><input type="text" name = "marketing" id = "marketing"><br></label></td>
            </tr>
            <tr>
                <td class = "input-head">인건비</td>
                <td><label class = "input_action"><input type="text" name = "laborcost" id = "laborcost"><br></label></td>
            </tr>
        </table>
        <label class = "input_action"><button class="inputbtn" type="submit" onclick='Send()'>전송하기</button></label>
    </div>
</body>
<script>
    const Send = () => {
        let upkeep = document.getElementById("upkeep").value;
        let marketing = document.getElementById("marketing").value;
        let laborcost = document.getElementById("laborcost").value;

        let form = document.createElement('form');
        form.action = '/InputFixedCost';
        form.method = 'POST';
        form.acceptCharset = "UTF-8";

        let textData = '<input type="hidden" name="upkeep" value="' + upkeep + '">';
        textData += '<input type="hidden" name="marketing" value="' + marketing + '">';
        textData += '<input type="hidden" name="laborcost" value="' + laborcost + '">';
        
        form.innerHTML = textData;
        document.body.append(form);
        form.submit();
    }
</script>
</html>