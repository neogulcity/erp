    <script>
        function open_sidemenu(event){
            var jegomn = document.getElementById('JEGO-side');
            var jemumn = document.getElementById('JEMU-side');
            var gogekmn = document.getElementById('GOGEK-side');
            jegomn.style.display = "none";
            jemumn.style.display = "none";
            gogekmn.style.display = "none";
            switch(event.target.value){
            case "1":
                jegomn.style.display = "block"
                break;
            case "2":
                jemumn.style.display = "block"
                break;
            case "3":
                gogekmn.style.display = "block"
                break;
            }
        }
        function open_input(event){
            var box = [[document.getElementById('ALLJEGO-search')
                        ,document.getElementById('Corporate-search')
                        ,document.getElementById('Corporate-input')
                        ,document.getElementById('Corporate-item-search')
                        ,document.getElementById('item-input')
                        ,document.getElementById('input-item-warehousing')
                        ,document.getElementById('input-item-search')
                        ,document.getElementById('order')
                        ,document.getElementById('order-search')]
                        ,[document.getElementById('ALLJEMU-search')
                        ,document.getElementById('fixed-expenditure-search')
                        ,document.getElementById('fixed-expenditure-input'),
                        document.getElementById('staff-list-search')
                        ,document.getElementById('wating-order-search')
                        ,document.getElementById('sale-cost-search')],
                        [document.getElementById('cs-list-search')]];
            var a = parseInt((event.target.value)/10);
            var b = (((event.target.value)%10)-1);
            for(var i = 0; i<box.length;i++){

                for(var j=0; j<box[i].length;j++){
                    box[i][j].style.display = "none";
                }
            }
            box[Number(a)][Number(b)].style.display ="block";
        }
    </script>    
